# kate: backspace-indents true; indent-pasted-text true; indent-width 4; keep-extra-spaces true; remove-trailing-spaces modified; replace-tabs true; replace-tabs-save true; syntax Tcl/Tk; tab-indents true; tab-width 4;
# $Id: Portfile 107458 2013-06-29 21:08:49Z jeremyhu@macports.org $

PortSystem              1.0
PortGroup               xcodeversion 1.0

name                    zlib
version                 1.2.11
categories              archivers
maintainers             ryandesign openmaintainer
license                 zlib
homepage                http://www.zlib.net/
platforms               darwin freebsd

description             zlib lossless data-compression library

long_description        zlib is designed to be a free, general-purpose, \
                        legally unencumbered, lossless data-compression \
                        library for use on virtually any computer hardware \
                        and operating system.

master_sites            ${homepage}
use_xz                  yes

checksums               rmd160  3f3ecd35efa6d41ba7b90e5f6e872e2ee8e42044 \
                        sha256  4ff941449631ace0d4d203e3483be9dbc9da454084111f97ea0a2114e19bf066

minimum_xcodeversions   {8 2.4.1 9 3.1}

configure.universal_args

use_parallel_build      yes

test.run                yes

destroot.destdir        prefix=${destroot}${prefix}

patch.pre_args         -p1

variant ng conflicts cloudflare description {provides the "Next Generation" zlib-ng project} {}
if {[variant_isset ng]} {
    PortGroup           github 1.0
    PortGroup           cmake 1.1
    long_description-append This variant provides the "Next Generation" zlib-ng library.
    git.branch          75e76eebeb08dccea44a1d9933699f7f9a0a97ea
    github.setup        Dead2 zlib-ng ${git.branch}
    fetch.type          git
    name                zlib
    version             1.2.11
    distname            zlib-ng
    worksrcdir          ${distname}
    depends_build       port:cpuid
    patchfiles          patch-ng-cmakelists.diff
    configure.args-append \
                        -DZLIB_COMPAT:BOOL=ON \
                        -DWITH_GZFILEOP:BOOL=ON \
                        -DWITH_NATIVE_INSTRUCTIONS:BOOL=ON
    pre-configure {
        if {[catch {system "${prefix}/bin/cpuid | fgrep -i sse4.2"} has_sse4]} {
            ui_warn "Your CPU doesn't have the SSE4.2 instruction set: ${has_sse4}"
            configure.optflags-append \
                        -mno-sse4
        }
        if {[catch {system "${prefix}/bin/cpuid | fgrep -i pclmul"} has_pclmul]} {
            ui_warn "Your CPU doesn't have the PCLMUL instruction: ${has_pclmul}"
            configure.optflags-append \
                        -mno-pclmul
        }
    }
    # this port needs DESTDIR to be set in the environment!!!
    destroot.env-append DESTDIR=${destroot}

    # 20170521 : 3x minigzip64 of a 128Mb file > /dev/null on a 1.6Ghz Intel Celeron N3150:
    # 1.344 user_cpu 0.063 kernel_cpu 0:01.31 total_time 106.8%CPU {2712M 8F 219R 262149I 0O 1w 1320c}
    # 1.342 user_cpu 0.052 kernel_cpu 0:01.30 total_time 106.9%CPU {2712M 0F 217R 262149I 0O 1w 1306c}
    # 1.348 user_cpu 0.059 kernel_cpu 0:01.31 total_time 106.1%CPU {2712M 0F 218R 262149I 0O 1w 1327c}
    # idem, standard level, zlib 1.2.11, -O3, without -march=native:
    # 2.635 user_cpu 0.056 kernel_cpu 0:02.51 total_time 106.7%CPU {2672M 0F 207R 262147I 0O 1w 2522c}
    # 2.622 user_cpu 0.057 kernel_cpu 0:02.50 total_time 106.8%CPU {2672M 0F 210R 262147I 0O 1w 2505c}
    # 2.640 user_cpu 0.040 kernel_cpu 0:02.51 total_time 106.7%CPU {2672M 0F 210R 262147I 0O 1w 2519c}
}

global cloudflare-commit
variant cloudflare conflicts ng description {Applies CloudFlare's patches to use SSE for accelerated compression. \
                            Note it is not 100% certain the zlib license continues to apply to this variant!} {
    PortGroup               github 1.0
    long_description-append This variant has the CloudFlare patches for SSE accelerated compression
    # This version contains a GPL'ed assembly file which may be incorporated. Just add GPL2+ to the license info.
    license-append          GPL-2+
    github.setup            cloudflare zlib 836eb111a5c5df7db3f2469a867a6f7c1b2e7bdb
    fetch.type              git
    version                 1.2.8.21
    distname                zlib-cloudflare
    worksrcdir              ${distname}
    supported_archs         i386 x86_64
    depends_build           port:cpuid
    pre-fetch {
        if {[catch {system "${prefix}/bin/cpuid | fgrep -i sse4.2"} has_sse4]} {
            ui_error "Error checking for the SSE4.2 instruction set: ${has_sse4}"
            return -code error "Your CPU doesn't seem to have the SSE4.2 instruction set: please install the regular zlib port"
        }
    }
    global cloudflare-commit
    set cloudflare-commit   836eb111a5c5df7db3f2469a867a6f7c1b2e7bdb
    patchfiles              patch-configure-clang.diff
    pre-patch {
        if {[catch {system "${prefix}/bin/cpuid | fgrep -i pclmul"} has_pclmul]} {
            ui_warn "Your CPU doesn't have the PCLMUL instruction: ${has_pclmul}"
            patchfiles-append \
                            patch-disable-pclmul.diff
            configure.optflags-append \
                            -mno-pclmul
            post-patch {
                ui_info "removing GPL'ed file crc32-pclmul_asm.S we won't be using anyway"
                delete ${worksrcpath}/contrib/amd64/crc32-pclmul_asm.S
            }
        } else {
            platform darwin {
                patchfiles-append \
                            patch-crc32pclmul-apple.diff
            }
        }
    }

    post-destroot {
        set docdir ${prefix}/share/doc/${name}
        xinstall -d ${destroot}${docdir}
        xinstall -m 0644 -W ${filespath} CloudFlare.txt ${destroot}${docdir}
        reinplace "s|@@HOST@@|[exec hostname]|g" ${destroot}${docdir}/CloudFlare.txt
        reinplace "s|@@COMMIT@@|${cloudflare-commit}|g" ${destroot}${docdir}/CloudFlare.txt
    }
    # > time sudo afsctool -cfv -9 kk1
    # kk1:
    # Number of HFS+ compressed files: 4581
    # Total number of files: 4631
    # Total number of file hard links: 0
    # Total number of folders: 4132
    # Total number of folder hard links: 0
    # Total number of items (number of files + number of folders): 8763
    # Folder size (uncompressed; reported size by Mac OS 10.6+ Finder): 1051069380 bytes / 1.06 GB (gigabytes) / 1013.3 MiB (mebibytes)
    # Folder size (compressed - decmpfs xattr; reported size by Mac OS 10.0-10.5 Finder): 283334679 bytes / 286.9 MB (megabytes) / 273.6 MiB (mebibytes)
    # Folder size (compressed): 286451492 bytes / 290 MB (megabytes) / 276.6 MiB (mebibytes)
    # Compression savings: 72.7%
    # Approximate total folder size (files + file overhead + folder overhead): 293218773 bytes / 293.2 MB (megabytes) / 279.6 MiB (mebibytes)
    # 119.699 user_cpu 9.758 kernel_cpu 2:33.34 total_time 84.4%CPU {0W 0X 0D 0K 54403072M 7F 68570R 379I 1347O 0r 0s 1k 4971w 15128c}
    # > time sudo afsctool -cfnv -9 kk2
    # kk2:
    # Number of HFS+ compressed files: 4581
