# $Id: Portfile 107458 2013-06-29 21:08:49Z jeremyhu@macports.org $

PortSystem              1.0
if {[variant_isset ng]} {
    PortGroup           github 1.0
    PortGroup           cmake 1.0
    cmake.out_of_source yes
}
PortGroup               xcodeversion 1.0

name                    zlib
version                 1.2.8
categories              archivers
maintainers             landonf ryandesign openmaintainer
license                 zlib
homepage                http://www.zlib.net/
platforms               darwin freebsd

description             zlib lossless data-compression library

long_description        zlib is designed to be a free, general-purpose, \
                        legally unencumbered, lossless data-compression \
                        library for use on virtually any computer hardware \
                        and operating system.

master_sites            ${homepage}
use_xz                  yes

checksums               ${distname}${extract.suffix} \
                        rmd160  2675993cab2db4a1eb69beb885c118e87bf86c64 \
                        sha256  831df043236df8e9a7667b9e3bb37e1fcb1220a0f163b6de2626774b9590d057

patchfiles              patch-configure-clang.diff
patch.pre_args          -p1

minimum_xcodeversions   {8 2.4.1 9 3.1}

configure.universal_args

use_parallel_build      yes

test.run                yes

destroot.destdir        prefix=${destroot}${prefix}

variant ng conflicts cloudflare description {provides the "Next Generation" zlib-ng project} {
    git.branch              92d1a83
    if {[file exists ${filespath}/zlib-NG-git/.git]} {
        git.url             ${filespath}/zlib-NG-git
        checksum {}
        fetch {
            ln -s ${filespath}/zlib-NG-git ${worksrcpath}
        }
        extract {}
    } else {
        github.setup        Dead2 zlib-ng ${git.branch}
        fetch.type          git
        name                zlib
        version             1.2.8
    }
    patchfiles
    configure.args-append   -DZLIB_COMPAT:BOOL=ON
}

global cloudflare-commit
variant cloudflare conflicts ng description {Applies CloudFlare's patches to use SSE for accelerated compression. \
                            Note it is not 100% certain the zlib license continues to apply to this variant!} {
    homepage-append         \nhttps://github.com/cloudflare/zlib
    supported_archs         i386 x86_64
    revision                [expr ${revision} + 1]
    # https://trac.macports.org/ticket/47896
    depends_build           port:cpuid
    patch_sites-append      https://github.com/cloudflare/zlib/compare/
    pre-fetch {
        if {[catch {system "${prefix}/bin/cpuid | fgrep -i sse4.2"} has_sse4]} {
            ui_error "Error checking for the SSE4.2 instruction set: ${has_sse4}"
            return -code error "Your CPU doesn't seem to have the SSE4.2 instruction set: please install the regular zlib port"
        }
    }
    global cloudflare-commit
    set cloudflare-commit   a80420c63532c25220a54ea0980667c02303460a
    # this fetches the patch: wget "https://github.com/cloudflare/zlib/compare/50893291621658f355bc5b4d450a8d06a563053d...a80420c63532c25220a54ea0980667c02303460a.patch"
    # grabbing them from github means we're not redistributing any code.
    ### NB: the zconf.h file from this release causes a Qt build failure due to the different uLongf definition
    patchfiles              50893291621658f355bc5b4d450a8d06a563053d...${cloudflare-commit}.patch \
                            patch-configure-clang.diff \
                            patch-disable-pclmul.diff
    checksums-append        50893291621658f355bc5b4d450a8d06a563053d...${cloudflare-commit}.patch \
                            rmd160  eb434d716fdc15b35bc3f096d3d7e1dd50208f34 \
                            sha256  92abfc78e6e847bf7a5f71058f479081678b249434a504588bdfc967fdd2f1c2
    configure.optflags-append   -mno-pclmul
    post-patch {
        # remove the GPL'ed file we won't be using anyway:
        delete ${worksrcpath}/contrib/amd64/crc32-pclmul_asm.S
    }
    post-destroot {
        set docdir ${prefix}/share/doc/${name}
        xinstall -d ${destroot}${docdir}
        xinstall -m 0644 -W ${filespath} CloudFlare.txt ${destroot}${docdir}
        reinplace "s|@@HOST@@|[exec hostname]|g" ${destroot}${docdir}/CloudFlare.txt
        reinplace "s|@@COMMIT@@|${cloudflare-commit}|g" ${destroot}${docdir}/CloudFlare.txt
    }
    # > time sudo afsctool -cfv -9 kk1
    # kk1:
    # Number of HFS+ compressed files: 4581
    # Total number of files: 4631
    # Total number of file hard links: 0
    # Total number of folders: 4132
    # Total number of folder hard links: 0
    # Total number of items (number of files + number of folders): 8763
    # Folder size (uncompressed; reported size by Mac OS 10.6+ Finder): 1051069380 bytes / 1.06 GB (gigabytes) / 1013.3 MiB (mebibytes)
    # Folder size (compressed - decmpfs xattr; reported size by Mac OS 10.0-10.5 Finder): 283334679 bytes / 286.9 MB (megabytes) / 273.6 MiB (mebibytes)
    # Folder size (compressed): 286451492 bytes / 290 MB (megabytes) / 276.6 MiB (mebibytes)
    # Compression savings: 72.7%
    # Approximate total folder size (files + file overhead + folder overhead): 293218773 bytes / 293.2 MB (megabytes) / 279.6 MiB (mebibytes)
    # 119.699 user_cpu 9.758 kernel_cpu 2:33.34 total_time 84.4%CPU {0W 0X 0D 0K 54403072M 7F 68570R 379I 1347O 0r 0s 1k 4971w 15128c}
    # > time sudo afsctool -cfnv -9 kk2
