PortSystem              1.0
PortGroup               xcodeversion 1.0

name                    zlib
version                 1.2.8
categories              archivers
maintainers             landonf ryandesign openmaintainer
license                 zlib
homepage                http://www.zlib.net/
platforms               darwin freebsd

description             zlib lossless data-compression library

long_description        zlib is designed to be a free, general-purpose, \
                        legally unencumbered, lossless data-compression \
                        library for use on virtually any computer hardware \
                        and operating system.

master_sites            ${homepage}
use_xz                  yes

checksums               rmd160  2675993cab2db4a1eb69beb885c118e87bf86c64 \
                        sha256  831df043236df8e9a7667b9e3bb37e1fcb1220a0f163b6de2626774b9590d057

patchfiles              patch-configure-clang.diff
patch.pre_args          -p1

minimum_xcodeversions   {8 2.4.1 9 3.1}

configure.universal_args

use_parallel_build      yes

test.run                yes

destroot.destdir        prefix=${destroot}${prefix}

variant cloudflare description {Applies CloudFlare's patches to use SSE for accelerated compression. \
                            Note it is not 100% certain the zlib license continues to apply to this variant!} {
    homepage-append         \nhttps://github.com/cloudflare/zlib
    supported_archs         i386 x86_64
    # https://trac.macports.org/ticket/47896
    depends_build           port:cpuid
    pre-fetch {
        if {[catch {system "${prefix}/bin/cpuid | fgrep -i sse4"} has_sse4]} {
            ui_error "Error checking for the SSE4 instruction set: ${has_sse4}"
            return -code error "Your CPU doesn't seem to have the SSE4 instruction set: please install the regular zlib port"
        }
    }
    patchfiles              cloudflare-patches.diff.gz \
                            patch-configure-clang.diff
