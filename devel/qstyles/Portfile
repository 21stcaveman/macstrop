# -*- coding: utf-8; mode: tcl; tab-width: 4; indent-tabs-mode: nil; c-basic-offset: 4 -*- vim:fenc=utf-8:ft=tcl:et:sw=4:ts=4:sts=4
# $Id$

PortSystem          1.0

# set the PortGroup options before including any PGs because we don't know who includes who
# (the qt5-kde PG includes LTO, for instance).
set LTO.configure_option "-config ltcg"
set qt5.prefer_kde  1

PortGroup           github 1.0
PortGroup           qmake5 1.0
PortGroup           LTO 1.0

qmake5.save_configure_cmd "log too"

name                qstyles
subport ${name}-devel {}
categories          devel
license             LGPL-3
maintainers         gmail.com:rjvbertin openmaintainer
description         Qt5 style plugins.
long_description    ${description}

platforms           darwin linux

homepage            code.qt.io/qt/qtstyleplugins.git

if {${subport} eq "${name}-devel"} {
    conflicts       ${name}
    fetch.type      git
    github.setup    RJVB qtstyleplugins f4c72d6fef0acfd8c30f0a6520131b572fcfd8d2
    # v5.0.0-23-g335dbec
    version         5.0.0.26
    worksrcdir      ${name}-git
    distname        ${name}-git
} else {
    conflicts       ${name}-devel
    description-append \
                    This port doesn't have a release version
    long_description-append \
                    This port doesn't have a release version
    pre-fetch {
        ui_error "This port doesn't have a release version yet"
        return -code error "Please install ${name}-devel"
    }
    version         0
    checksums       rmd160  0 \
                    sha256  0
}

default configure.dir       {${workpath}/build}
configure.pre_args-append   ../${worksrcdir}
default build.dir           {${workpath}/build}

patch.pre_args      -Np1

configure.args-append \
                    -r -config cleanlooks -config plastique

variant gtk2 description {include the GTk2 plugin and platformtheme} {}
if {[variant_isset gtk2]} {
#     patchfiles-append       patch-gtk2-deps.diff
    configure.args-append \
                    -config gtk2
    platform darwin {
        qt5.depends_component \
                    x11
        depends_lib-append \
                    port:gtk2 \
                    port:cairo \
                    port:dbus
    }
}
