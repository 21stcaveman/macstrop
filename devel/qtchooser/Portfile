# -*- coding: utf-8; mode: tcl; tab-width: 4; truncate-lines: t; indent-tabs-mode: nil; c-basic-offset: 4 -*- vim:fenc=utf-8:et:sw=4:ts=4:sts=4
# $Id: Portfile Wed Nov 26, 12:10:38 UTC 2014 rjvbertin@gmail.com $

PortSystem          1.0
#PortGroup           github 1.0

fetch.type          git
git.url             git://github.com/qtproject/qtchooser
git.branch          ae5eeef85c9a818bfa6a3e03511e3935e9abe01f

#github.setup        qtproject qtchooser d2b79979
name                qtchooser
version             39-13-gae5eeef

categories          devel qt4 qt5

description         QTChooser allows to chose at runtime between multiple Qt versions installed in parallel

long_description    ${description}

platforms           darwin
license             LGPL-2+
maintainers         gmail.com:rjvbertin

homepage            https://github.com/qtproject/qtchooser

conflicts           qt_select

pre-extract {
    if {![file exists ${prefix}/libexec/qt4/bin/qmake] && ![file exists ${prefix}/libexec/qt5/bin/qmake]} {
        return -code error "\n\nERROR:\n\
This port requires that qt4-mac and/or qt5-mac (or qt5-kde) be installed in concurrent mode."
    }
}

patch.pre_args          -Np1
if {${os.platform} eq "darwin"} {
    patchfiles-append   patch-for-macports.diff
} else {
    patchfiles-append   patch-for-macports-linux.diff
}

configure {
    reinplace "s|prefix = @PREFIX@|prefix = ${prefix}|g" ${worksrcpath}/Makefile ${worksrcpath}/src/qtchooser/Makefile
    # correct the hardcoded path to the xdg "root" directory
    reinplace "s|\"@PREFIX@/etc/xdg\"|\"${prefix}/etc/xdg\"|g" ${worksrcpath}/src/qtchooser/main.cpp
}

build.args-append \
    CC="${configure.cc}" \
    CXX="${configure.cxx}" \
    QTCHOOSER_GLOBAL_DIR="${prefix}/share:${prefix}/lib:${prefix}/lib/qt-default" \
    CXXFLAGS="${configure.cflags}"

variant qt4default description {make Qt4 the default Qt version} {
}
variant qt5default description {make Qt5 the default Qt version} {
}
if {![variant_isset qt5default] && ![variant_isset qt4default]} {
    default_variants    +qt4default
}

post-destroot {
    PortGroup   qt4 1.0
    exec mkdir -p ${destroot}/${prefix}/etc/xdg/qtchooser-mp
    system "echo ${qt_bins_dir} > ${destroot}/${prefix}/etc/xdg/qtchooser-mp/qt4.conf"
    system "echo ${qt_libs_dir} >> ${destroot}/${prefix}/etc/xdg/qtchooser-mp/qt4.conf"
    PortGroup   qt5 1.0
    system "echo ${qt_bins_dir} > ${destroot}/${prefix}/etc/xdg/qtchooser-mp/qt5.conf"
    system "echo ${qt_libs_dir} >> ${destroot}/${prefix}/etc/xdg/qtchooser-mp/qt5.conf"
    if {[variant_isset qt4default]} {
        ln -s qt4.conf ${destroot}/${prefix}/etc/xdg/qtchooser-mp/default.conf
    } elseif {[variant_isset qt5default]} {
        ln -s qt5.conf ${destroot}/${prefix}/etc/xdg/qtchooser-mp/default.conf
    }
}
