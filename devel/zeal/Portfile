# -*- coding: utf-8; mode: tcl; tab-width: 4; indent-tabs-mode: nil; c-basic-offset: 4 -*- vim:fenc=utf-8:ft=tcl:et:sw=4:ts=4:sts=4

PortSystem          1.0
PortGroup           github 1.0
PortGroup           qt5 1.0
PortGroup           cmake 1.1

name                zeal

subport zeal-devel  {}
if {${subport} eq "${name}-devel"} {
    github.setup    zealdocs zeal 9bf296af12a8389fa6e761c327294e07d7dc79f4
    fetch.type      git
    version         0.6.0.9
    worksrcdir      ${name}-git
    distname        ${name}-git
    set PPREFIX     devel/
    depends_lib-append \
                    port:sqlite3
    depends_build-append \
                    path:share/ECM/cmake/ECMConfig.cmake:kde-extra-cmake-modules
    cmake.save_configure_cmd
    cmake.save_configure_cmd
} else {
    github.setup    zealdocs zeal v0.6.0
    version         0.6.0
    checksums       rmd160  6f23816322714894feea384da5cfe1666267d723 \
                    sha256  959b958df549b8034e28915e0305384ece95cb24f8e29c2f3c8ac20f5660d727
    set PPREFIX     ./
    livecheck.regex [strsed [join ${livecheck.regex} ""] "s|archive\/(|archive/(v|"]
}

categories          devel
description         A docset browser written in Qt.
long_description    Zeal is an offline documentation browser inspired by Dash

maintainers         gmail.com:rjvbertin mk openmaintainer
platforms           darwin linux
license             GPL-3

homepage            https://zealdocs.org

installs_libs       no

depends_lib-append  port:libarchive

patch.pre_args      -Np1

patchfiles-append   ${PPREFIX}patch-macports-install.diff \
                    patch-macports-update-checking.diff \
                    patch-no-carbon.diff

# support for QtWebEngine was removed upstream - for now?
# variant webkit conflicts webengine description {use the legacy Qt WebKit interface}
variant webkit description {use the legacy Qt WebKit interface} {
    qt5.depends_component \
                    qtwebkit
}

