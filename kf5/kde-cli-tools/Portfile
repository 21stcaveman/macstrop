# $Id$

PortSystem          1.0

set kf5.project     kde-cli-tools
set kf5.virtualPath plasma
PortGroup           kf5 1.1
kf5.use_latest      plasma
name                kf5-cli-tools

maintainers         gmail.com:rjvbertin mk openmaintainer

installs_libs       no

description         KF5 CLI utilities
long_description    KF5 command line interface utilities.
checksums           rmd160  7a5f15ed0a9bb93f807a9f2a09d1ae82c2246a2d \
                    sha256  73021303bb5a44573a539ba99a3e687dec68acc435190615b1020876e564b43a

patchfiles-append \
                    patch-preserve-window-icon.diff

kf5.depends_frameworks \
                    kcmutils kconfig kdoctools ki18n \
                    kiconthemes kinit kio kwindowsystem
# these are optional:
kf5.depends_frameworks \
                    kdelibs4support kdesu

# Qt documentation for this package makes no sense
unset kf5.allow_docs_generation

platform darwin {
    patchfiles-append \
                    patch-no-x11.diff \
                    patch-nongui-execs.diff
    variant kde4compat description {allow installation alongside KDE4's port:kde4-runtime} {
        post-destroot {
            file delete -force ${destroot}${prefix}/share/doc/HTML
            file delete -force ${destroot}${prefix}/share/locale
            file delete -force ${destroot}${prefix}/share/man
        }
    }
    post-destroot {
#         xinstall -m 755 ${filespath}/kcmshell5.sh ${destroot}${prefix}/bin/kcmshell5
#         reinplace "s|@KDEAPPDIR@|${kf5.applications_dir}|g" ${destroot}${prefix}/bin/kcmshell5
        kf5.add_app_wrapper kcmshell5
    }
}

livecheck.type      regex
livecheck.url       http://download.kde.org/stable/plasma/
livecheck.regex     (5+(\\.\\d+)+)
