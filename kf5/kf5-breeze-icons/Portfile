# $Id$

PortSystem          1.0

set kf5.project     breeze
set kf5.virtualPath plasma
set kf5.plasma      5.4.3
PortGroup           kf5 1.1
name                kf5-breeze-icons

maintainers         gmail.com:rjvbertin mk openmaintainer

installs_libs       no
supported_archs     noarch
use_xz              yes

description         Breeze icon theme
long_description    Breeze icon theme.
checksums           rmd160  d78e825b5672e238918415a6572277ea891812d3 \
                    sha256  fc89d5edcc8c3c13263d1b1759f0f8400ea79c76df0eeafcce91d462d4cf93fa

subport ${name}-dark {
    description     Dark ${description}
    long_description \
                    Dark ${long_description}
}

if {${subport} eq "${name}"} {
    xinstall -m 755 -d ${worksrcpath}
    extract.post_args-append \
                    -C ${worksrcpath} --strip-components 2 ${distname}/icons
    post-extract {
    }
} else {
    xinstall -m 755 -d ${worksrcpath}
    extract.post_args-append \
                    -C ${worksrcpath} --strip-components 2 ${distname}/icons-dark
}

livecheck.type      regex
livecheck.url       http://download.kde.org/stable/plasma/
livecheck.regex     (5+(\\.\\d+)+)
