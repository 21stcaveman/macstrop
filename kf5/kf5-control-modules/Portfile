maintainers         gmail.com:rjvbertin mk openmaintainer

installs_libs       yes

description         KF5 configuration modules
long_description    KF5 configuration modules.

if {${subport} eq "${name}"} {
    conflicts       kf5-config-modules-devel
    checksums       rmd160  34dc52555c8c0d4740b4021215d7ea3da805377f \
                    sha256  d146a98ff75726ae04c2025477f78b8ec1f124475f5f94cd3727045048865fbd
} else {
    version         5.5.1.62
    conflicts       kf5-config-modules
    fetch.type      git
    if {[file exists ${filespath}/plasma-desktop-git/.git]} {
        git.url     ${filespath}/plasma-desktop-git
    } else {
        git.url     git://anongit.kde.org/${kf5.project}
    }
    git.branch      fa8acf84d60eca2063892250f362b4fdd8b0ddb8
    distname        ${kf5.project}-5.git
    configure.post_args \
                    ${worksrcpath}/kcms
}

kf5.depends_frameworks \
                    kcmutils kconfig kdoctools ki18n \
                    kiconthemes kinit kio kwindowsystem

