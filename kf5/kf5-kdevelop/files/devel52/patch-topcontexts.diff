+  // FIXME testing
+  if (lvldbStore) {
+    reinterpret_cast<TopDUContextLevelDB*>(lvldbStore)->commit();
+  }
+  if (s_envExists && m_mode != MDB_RDONLY) {
+    if (m_currentValue.size() != m_currentLen) {
+      // m_currentLen is the true size
