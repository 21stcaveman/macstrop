+TopDUContextLevelDB::TopDUContextLevelDB(uint topContextIndex)
+{
+  if (!levelDB && Q_LIKELY(QFileInfo(basePath()).isWritable())) {
+    leveldb::Options options;
+    options.create_if_missing = true;
+    options.comparator = &leveldbComparator;
+    int attempts = 0;
+    do {
+      attempts += 1;
+      leveldb::Status status = leveldb::DB::Open(options, basePath().toStdString(), &levelDB);
+      if (!status.ok()) {
+        m_errorString = QStringLiteral("Error opening LevelDB database:") + QString::fromStdString(status.ToString());
+        qWarning() << Q_FUNC_INFO << m_errorString;
+        levelDB = nullptr;
+        if (status.IsInvalidArgument()) {
+          // retry opening a fresh store
+          leveldb::DestroyDB(basePath().toStdString(), options);
+        }
+      }
+    } while (!levelDB && attempts < 2);
+  }
+  if (levelDB) {
+    m_currentIndex = topContextIndex;
+    m_currentKey = indexKey(&m_currentIndex);
+    s_DbRefCount += 1;
+  }
+  // the remaining member vars are initialised elsewhere.
