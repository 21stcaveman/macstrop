# $Id$

PortSystem          1.0

set kf5.project     khelpcenter
set kf5.virtualPath plasma
PortGroup           kf5 1.1
kf5.use_latest      plasma

name                kf5-khelpcentre
maintainers         gmail.com:rjvbertin mk openmaintainer

installs_libs       no

description         KF5 Help Viewer
long_description    KF5 Help Viewer.
checksums           rmd160  4629770ef549cdd6b4c66e396e5d58c48d401432 \
                    sha256  0f15e37394c468b3c3f51f4c0fd8161dabba9b99ca44e69a48b712b073f0bc92


kf5.depends_frameworks \
                    kconfig kcoreaddons kdbusaddons kdoctools ki18n \
                    kiconthemes kinit kcmutils kdelibs4support \
                    khtml kservice kwindowsystem

unset kf5.allow_docs_generation

patchfiles-append \
                    patch-preserve-window-icon.diff \
                    patch-info-path.diff

platform darwin {
    variant kde4compat description {allow installation alongside KDE4's port:kde4-runtime} {
        post-destroot {
        }
    }
    post-destroot {
        system "echo \"#!/bin/sh\nexec \\\"${kf5.applications_dir}/khelpcenter.app/Contents/MacOS/khelpcenter\\\" \\\"\\\$\@\\\"\" > ${destroot}${prefix}/bin/khelpcentre5"
        system "chmod 755 ${destroot}${prefix}/bin/khelpcentre5"
        if {![variant_isset kde4compat]} {
            ln -s khelpcentre5 ${destroot}${prefix}/bin/khelpcenter
        }
    }
}
platform linux {
    post-destroot {
            ln -s khelpcenter ${destroot}${prefix}/bin/khelpcentre5
    }
}

livecheck.type      regex
livecheck.url       http://download.kde.org/stable/plasma/
livecheck.regex     (5+(\\.\\d+)+)
