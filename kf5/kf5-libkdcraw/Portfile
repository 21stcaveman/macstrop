# $Id$

PortSystem          1.0

set kf5.project     libkdcraw
set kf5.virtualPath applications
set kf5.category    graphics
PortGroup           kf5 1.1

kf5.use_latest      applications

description         LibRaw C++ interface for KF5
long_description    Libkdcraw is a C++ interface around LibRaw library used to decode RAW \
                    picture files. More information about LibRaw can be found at http://www.libraw.org.
maintainers         gmail.com:rjvbertin mk openmaintainer

installs_libs       yes

checksums           rmd160  c8d55d15c7d798e7d82b0ebe6223412d6256992f \
                    sha256  7a023947a02185a08b4a91207b9d637511d9cfccc2e3bac1d7687c8771ed4f8d

platform darwin {
    depends_lib-append \
                    port:libraw
}

configure.args-append \
                    -DBUILD_TESTING=OFF

platform darwin {
    variant kde4compat description {allow installation alongside KDE4's port:libkdcraw} {}
    post-destroot {
        if {[variant_isset kde4compat]} {
        }
    }
}
