# -*- coding: utf-8; mode: tcl; tab-width: 4; indent-tabs-mode: nil; c-basic-offset: 4 -*- vim:fenc=utf-8:ft=tcl:et:sw=4:ts=4:sts=4
# $Id$

PortSystem          1.0

set kf5.project     libkipi
set kf5.virtualPath applications
set kf5.category    development
PortGroup           kf5 1.1

kf5.use_latest      applications

description         KIPI Library (KDE Image Program Interface), KF5 version.
long_description    Libkipi is an interface to use kipi-plugins from a KDE image management  \
                    programme like digiKam (http://www.digikam.org). This is the new version,\
                    targetting KF5.
maintainers         gmail.com:rjvbertin mk openmaintainer

installs_libs       yes

subport ${name}-devel {
    description     ${description} This port follows git/master
    long_description \
                    ${long_description} This port follows git/master
}

if {${subport} eq "${name}-devel"} {
    conflicts       ${name}
    fetch.type      git
    if {[file exists ${filespath}/${kf5.project}-git/.git]} {
        git.url     ${filespath}/${kf5.project}-git
    } else {
        git.url     git://anongit.kde.org/libkipi
    }
    # v16.03.90-1-gea65efc
    git.branch      ea65efcf6865f0185ea86a302d01f5451ba556c6
    version         16.03.90.1
} else {
    conflicts       ${name}-devel
    checksums       rmd160  ff08cfef4dbd9674d137034a22a6ffbec357f37d \
                    sha256  a5d0cdb47c2bd62db4b05463fb915c42ba63a53016144eadf1afdd27d259e853
}

kf5.depends_frameworks \
                    kconfig ki18n kservice kxmlgui

configure.args-append \
                    -DBUILD_TESTING=OFF

platform darwin {
    variant kde4compat description {allow installation alongside KDE4's port:libkipi} {}
    post-destroot {
        if {[variant_isset kde4compat]} {
            file delete -force ${destroot}${prefix}/share/icons
        }
    }
}
