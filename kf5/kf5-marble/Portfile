PortSystem          1.0

set kf5.project     marble
set kf5.virtualPath applications
set kf5.category    development
PortGroup           kf5 1.1

kf5.use_latest      applications

maintainers         gmail.com:rjvbertin mk openmaintainer

installs_libs       yes

description         Virtual Globe, KF5 version.
long_description    KDE virtual globe and world atlas. This is the new version,\
                    based on KF5.
checksums           rmd160  526a815da978426efd39d221d112c8acc2fb8f35 \
                    sha256  55a5476ada37e6367d4ebdda165eaad745f72c1b3b8b96e3bae7612581b4e7bf

kf5.depends_frameworks \
                    kconfig kcoreaddons kcrash ki18n kio \
                    knewstuff kparts krunner kservice kwallet

depends_lib-append  port:gpsd \
                    port:phonon-qt5 \
                    port:zlib

configure.args-append \
                    -DBUILD_MARBLE_TOOLS=ON

unset kf5.allow_docs_generation

platform darwin {
    variant kde4compat description {allow installation alongside KDE4's port:marble} {}
    post-destroot {
        if {[variant_isset kde4compat]} {
        }
    }
}
