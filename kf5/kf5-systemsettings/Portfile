# $Id$

PortSystem          1.0

set kf5.project     systemsettings
set kf5.virtualPath plasma
PortGroup           kf5 1.1
kf5.use_latest      plasma

maintainers         gmail.com:rjvbertin mk openmaintainer

installs_libs       no

description         KF5 SystemSettings utility
long_description    KF5 SystemSettings utility.
checksums           rmd160  91f5177159d5ca6150836051a8401520cc327d6b \
                    sha256  334da860efe51d18e6f900bd485a08d1527492d404eb2855ccbf2ec771c8cf99


kf5.depends_frameworks \
                    kcmutils kconfig kdbusaddons \
                    kdoctools ki18n kiconthemes \
                    kio kitemviews kservice \
                    kwindowsystem kxmlgui
kf5.depends_frameworks \
                    khtml
depends_run-append \
                    ${kf5.cli-tools_dep}

patchfiles-append \
                    patch-preserve-window-icon.diff

platform darwin {
    variant kde4compat description {allow installation alongside KDE4's port:kde4-workspace} {
        post-destroot {
            file delete ${destroot}${prefix}/lib/libsystemsettingsview.dylib
            file delete -force ${destroot}${prefix}/share/doc
            file delete -force ${destroot}${prefix}/share/locale
        }
    }
}
post-destroot {
    kf5.add_app_wrapper kf5-systemsettings5 systemsettings5
}

livecheck.type      regex
livecheck.url       http://download.kde.org/stable/plasma/
livecheck.regex     (5+(\\.\\d+)+)
