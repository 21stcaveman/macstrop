# -*- coding: utf-8; mode: tcl; tab-width: 4; indent-tabs-mode: nil; c-basic-offset: 4 -*- vim:fenc=utf-8:ft=tcl:et:sw=4:ts=4:sts=4
# $Id$

PortSystem          1.0
PortGroup           conflicts_build 1.0

set kf5.project     kompare
set kf5.virtualPath applications
set kf5.category    development
PortGroup           kf5 1.1
PortGroup           active_variants 1.1

maintainers         gmail.com:rjvbertin mk openmaintainer

installs_libs       yes

description         KDE Diff viewer
long_description    Kompare is a GUI front-end program that enables differences \
                    between source files to be viewed and merged. It can be used \
                    to compare differences on files or the contents of folders.
checksums           rmd160  405d5dba5fc32eed1abd43314fed9fced16beaeb \
                    sha256  d1158798937019845905cb419683e366f383ece9b0db64b88df2b8ffb17c71b3

kf5.depends_frameworks \
                    kcoreaddons kcodecs kconfig kdoctools \
                    kiconthemes kjobwidgets kparts \
                    ktexteditor kwidgetsaddons
depends_lib-append  port:kf5-libkomparediff2

conflicts_build-append \
                    port:libkomparediff2

patchfiles-append \
                    patch-add-icon.diff

platform darwin {
    if {![catch {set result [active_variants kompare kf5compat ""]}]} {
        if {${result}} {
            conflicts-append \
                    port:kompare
        }
    }
    post-destroot {
        ln -s ${kf5.applications_dir}/kompare.app/Contents/MacOS/kompare ${destroot}${prefix}/bin/kompare5
    }
}
platform linux {
    post-destroot {
        ln -s kompare \
                    ${destroot}${prefix}/bin/kompare5
    }
}