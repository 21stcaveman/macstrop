# -*- coding: utf-8; mode: tcl; tab-width: 4; indent-tabs-mode: nil; c-basic-offset: 4 -*- vim:fenc=utf-8:ft=tcl:et:sw=4:ts=4:sts=4
# $Id$

PortSystem          1.0

set kf5.project     kwalletmanager
set kf5.virtualPath applications
PortGroup           kf5 1.1

maintainers         gmail.com:rjvbertin mk openmaintainer

installs_libs       no
use_xz              yes

description         KF5 Wallet manager
long_description    The KF5 Wallet manager is a tool to manage the \
                    passwords in your KDE wallet(s).
checksums           rmd160  df2b77aafa18d55c766870d1eafc6250c2c11f1c \
                    sha256  50ab15b0d7c0fce52b8e30bc6b018272a97c502aa3120c4ac70380eff17c04f2

kf5.depends_frameworks \
                    kcoreaddons kdoctools \
                    kauth kwallet \
                    kservice kcmutils \
                    kdelibs4support ki18n \
                    kxmlgui kconfig \
                    kconfigwidgets kdbusaddons

platform darwin {
    variant kde4compat description {allow installation alongside KDE4's port:kwallet} {}
    patchfiles-append \
                    patch-savehelper.diff
    post-destroot {
        if {[variant_isset kde4compat]} {
            file delete -force ${destroot}${prefix}/share/icons
        }
        ln -s ${kf5.applications_dir}/kwalletmanager5.app/Contents/MacOS/kwalletmanager5 ${destroot}${prefix}/bin/kwalletmanager5
    }
}
patchfiles-append   patch-enable-restore-from-tray.diff
