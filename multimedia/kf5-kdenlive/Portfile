# -*- coding: utf-8; mode: tcl; tab-width: 4; indent-tabs-mode: nil; c-basic-offset: 4 -*- vim:fenc=utf-8:ft=tcl:et:sw=4:ts=4:sts=4
# $Id: Portfile 126003 2014-10-01 20:53:19Z mk@macports.org $

PortSystem          1.0
PortGroup           active_variants 1.1

set kf5.project     kdenlive
set kf5.virtualPath applications
set kf5.category    multimedia
PortGroup           kf5 1.1

categories-append   multimedia
license             GPL-2+

description         A KF5-based non-linear video editing suite.
long_description    Kdenlive is a non-linear video editing suite \
                    based on MLT Framework and KDE Frameworks 5 . \
                    It supports DV, HDV and many more formats. \
                    Kdenlive relies on the MLT video engine and \
                    FFMpeg for video formats, thus offering a comprehensive solution.
conflicts           kdenlive

homepage            http://www.kdenlive.org/

subport "${name}-devel" {
    conflicts       ${name}
    fetch.type      git
    if {[file exists ${filespath}/${name}-git/.git]} {
    git.url         ${filespath}/${name}-git
    } else {
        git.url     git://anongit.kde.org/kdenlive
    }
    # v15.12.0-234-geb36d84
    git.branch      eb36d84628bea0e4c68d7fa623be2074fae6694a
    distname        kdenlive5-git
    version         15.12.0.234
    patchfiles-append \
                    patch-dont-impose-breeze.diff
}

if {${subport} eq "${name}"} {
    conflicts       ${name}-devel
    checksums       rmd160  c04f8f3b071f25568a848c084292633ecc550f42 \
                    sha256  5a6f4ae4bd07c64b90a3ebe88775b457c9c1d8b3a23820203d86df114183fbf8
}

variant qspXDG description "Switch Qt5's QStandardPaths to XDG-compliant mode (e.g. using ${prefix}/share)" {
    patchfiles-append \
                    patch-add-qspxdg.diff
}
# check if a representative KF5 Framework from our dependencies is installed +qspXDG
# if so, align.
if {![catch {set result [active_variants kf5-kconfig qspXDG ""]}]} {
    if {${result}} {
        default_variants \
                    +qspXDG
    }
}

depends_lib-append  port:qt5-mlt

depends_run-append  port:cdrtools \
                    port:dvdauthor

kf5.depends_frameworks \
                    karchive kbookmarks kconfig kconfigwidgets \
                    kcoreaddons kcrash kdbusaddons kdoctools \
                    kfilemetadata kguiaddons kiconthemes \
                    knewstuff knotifications knotifyconfig \
                    kio kplotting ktextwidgets \
                    kwidgetsaddons kxmlgui

# mlt is not universal
universal_variant   no

# don't generate API documentation
unset kf5.allow_docs_generation

platform darwin {
    patchfiles-append \
                    patch-install-loc-icon-and-type.diff
    post-patch {
        # the patchfile above is for v5.13.0; I'm too lazy to generate one for 5.12.0 and
        # change it back when the next version hits the shelves in a few weeks.
        reinplace "s|BIN_INSTALL_DIR|BUNDLE_INSTALL_DIR|g" ${worksrcpath}/src/CMakeLists.txt
    }
}

patchfiles-append   patch-silence-c-locale-msg.diff

post-patch {
    reinplace "s|/usr/local|${prefix}|g" ${worksrcpath}/cmake/modules/FindMLT.cmake
}

livecheck.url       http://www.kdenlive.org
livecheck.regex     {Kdenlive (\d+(?:\.\d+)+)}
