PortSystem          1.0
PortGroup           github 1.0
PortGroup           qmake5 1.0

github.setup        QupZilla qupzilla 2.0.1 v
name                QupZilla
categories          www
platforms           darwin
maintainers         ryandesign openmaintainer
license             GPL-3+

description         fast lightweight web browser made with QtWebEngine

long_description    QupZilla is a ${description}. QupZilla has all the \
                    standard features you expect from a web browser, \
                    including bookmarks, history, tabbed browsing, RSS \
                    feeds, ad blocking, Flash blocking, and an SSL \
                    certificate manager.

homepage            http://www.qupzilla.com/

checksums           rmd160  9e15a1d820fe70c22f760e241649517ccf765d5d \
                    sha256  765a70cc2015be4ec5942fc23304f9f811b8c46c04ec3afb30c2f3654c65ac89

# this procedure should be provided by the Qt5 PortGroup (and has been submitted)
if {![info exists qt5.depends_component]} {
    proc qt5.depends_component {first args} {
        global qt5_component_lib
        global qt5.using_kde
        # join ${first} and (the optional) ${args}
        set args [linsert $args[set list {}] 0 ${first}]
        if {[info exists qt5.using_kde] && ${qt5.using_kde}} {
            set qt5main "qt5-kde"
        } else {
            set qt5main "qt5"
        }
        foreach comp ${args} {
            if {${comp} eq "qt5"} {
                if {[info exists qt5.using_kde] && ${qt5.using_kde}} {
                    global qt5_dependency
                    depends_lib-append ${qt5_dependency}
                } else {
                    depends_lib-append port:${qt5main}
                }
            } else {
                set portname "${qt5main}-${comp}"
                if {[info exists qt5_component_lib] && [info exists qt5_component_lib(${comp})]} {
                    # an explicit dependency pattern was given, e.g. path:foo
                    depends_lib-append "$qt5_component_lib(${comp}):${portname}"
                } else {
                    depends_lib-append port:${portname}
                }
            }
        }
    }
}

qt5.depends_component \
                    qt5 qtwebengine
depends_lib-append \
                    port:openssl

patchfiles          patch-mac-macdeploy.sh.diff \
                    patch-mac=macports.diff

platform linux {
    configure.args-append \
                    -config absolute_library_soname
    configure.ldflags-append \
                    -Wl,-rpath=${prefix}/lib -Wl,-rpath-link=${prefix}/lib
}
if {[variant_isset LTO]} {
    configure.args-append \
                    -config ltcg
}

variant kwallet description {build KF5 KWallet backend for storing credentials} {
    PortGroup       kf5-frameworks 1.0

    kf5.depends_frameworks \
                    kwallet
    patchfiles-append \
                    patch-enable-kwallet.diff
}

configure.env-append \
                    QUPZILLA_PREFIX=${prefix}/
configure.args-append \
                    QUPZILLA_PREFIX=${prefix}/

build.args-append   QUPZILLA_PREFIX=${prefix}/

platform darwin {
    destroot {
        system -W ${worksrcpath} "./mac/macdeploy.sh true"
        xinstall -m 755 -d ${destroot}${qt_apps_dir}
        copy ${worksrcpath}/bin/QupZilla.app ${destroot}${qt_apps_dir}
        system "echo \"#!/bin/sh\nexport KDE_SESSION_VERSION=5\nexec \\\"${qt_apps_dir}/QupZilla.app/Contents/MacOS/QupZilla\\\" \\\"\\\$\@\\\"\" > ${destroot}${prefix}/bin/qupzilla"
        system "chmod 755 ${destroot}${prefix}/bin/qupzilla"
    }
}
